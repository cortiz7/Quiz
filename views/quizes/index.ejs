<form action="/quizes" method="get">
	Buscar Pregunta:
	<input type="text" name="search" placeholder="Quiz">
	<input type="submit" value="Enviar">
</form>
<table>
	<tr>
		<th>Tema</th>
		<th>Pregunta</th>
		<th colspan="2">Acciones</th>
	</tr>
<% var i; for (i=0; i< quizes.length; i++){ %>	
	<tr>
		<td><%= quizes[i].tema %></td>	
		<td><a href="quizes/<%= quizes[i].id %>"> <%= quizes[i].pregunta %></a></td>
		<td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
		<td><form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
			<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">Eliminar</button>
		</form></td>
	</tr>
<% } %>
</table>
<a href="/quizes/new"><button type="button">Crear Pregunta</button></a>